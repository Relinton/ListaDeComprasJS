@{
    ViewData["Title"] = "Home Page";
}

<form id="form-itens" class="has-text-centered">
    <input type="text" class="input has-text-centered" required placeholder="Digite o item que deseja adicionar" id="receber-item">
    <button for="salvar" type="submit" class="mt-2 has-text-weight-bold button is-small is-primary">Salvar item</button>
</form>

<div class="has-background-white mt-4">
    <div>
        <h2 class="has-text-link has-text-weight-bold is-size-4 ml-2">
            Lista de compras
        </h2>
        <ul class="mx-2 borda-lista" id="lista-de-itens">
        </ul>
    </div>

    <section class="pb-2">
        <h2 class="has-text-link has-text-weight-bold is-size-4 ml-2">
            Comprados
        </h2>
        <ul class="mx-2 borda-lista" id="itens-comprados">
        </ul>
    </section>
</div>
